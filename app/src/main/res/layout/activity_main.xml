<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.opet.appopetmanha.MainActivity">

    <EditText
        android:hint="Valor da Comanda"
        android:id="@+id/editComanda"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Quantidade de Pessoas"
        android:id="@+id/editPessoas"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/checkServico"
        android:text="10% de Serviço."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="calculaRateio"
        android:text="Dividir Despesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textValor"
        android:text="Divisão da Despesa:"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
